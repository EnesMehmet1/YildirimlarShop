@model  YildirimlarE.Models.BirlesikTablolar
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="wrap1">

    <div class="wrapper">

        <div class="grids">
            <div class="box1">
                    @foreach (var x in Model.u)
                    {
                        <div class="left">
                            <div class="bot-left">
                                <img src="@x.FotoUrl" style="width:300px; height:250px;" alt="" />
                            </div>
                            <div class="left-text">
                                <h4>@x.Ad</h4>
                                <span class="doller">$1024.99</span>
                                <p>@x.UrunAciklama.Substring(0, 25)</p>
                                <p><a href="/Urun/UrunDetay/@x.UrunId"><span class="read">Ürünü İncele >></span></a></p>
                            </div>
                        </div>
                    }
                    <div class="clear"></div>
                </div>
            </div>
    </div>
</div>
