@using YildirimlarE.Models
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Urunler</h2>
<br />
<table class="table table-border">
    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>kategori</th>
        <th>Stok Sayısı</th>
        <th>Sil</th>
        <th>Guncelle</th>
        <th>Detay</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.UrunId</td>
    <td>@x.Ad</td>
    <td>@x.kategori.KategoriAd</td>
    <td>@x.Stok</td>
    <td><a href="/Admin/UrunSil/@x.UrunId" class="btn btn-danger">Sil</a></td>
    <td><a href="/Admin/UrunGetir/@x.UrunId" class="btn btn-warning">Güncelle</a></td>
    <td><a href="/Urun/UrunDetay/@x.UrunId" class="btn btn-primary">Detay</a></td>
</tr>
    }
</table>

<a href="/Admin/UrunEkle/" class="btn btn-primary">Yeni Ürün</a>



